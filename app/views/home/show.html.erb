<% if current_user %>
  <div class='jumbotron'>
    <p class='lead'><%= "Welcome #{current_user.name.split.first}!" %></p>
    <p>A random username has been generated for you. You are now <%= current_user.username %> !</p>
    <iframe width='560' height='315' src='https://www.youtube.com/embed/hX3j0sQ7ot8?autoplay=1' frameborder='0' allowfullscreen></iframe>
    <%= render 'messages' %>
    <%= render 'message_form' %>
  </div>
<% else %>
  <div class='jumbotron'>
    <p class='lead'>Sign in to see what others are saying!</p>
    <iframe width='560' height='315' src='https://www.youtube.com/embed/hX3j0sQ7ot8?autoplay=1' frameborder='0' allowfullscreen></iframe>
  </div>
<% end %>
